<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <display-name>planoContas</display-name>
 <context-param>
  <description>Vaadin production mode</description>
  <param-name>productionMode</param-name>
  <param-value>false</param-value>
 </context-param>
 <servlet>
  <servlet-name>planoContas</servlet-name>
  <servlet-class>br.gov.frameworkdemoiselle.servlet.VaadinApplicationServlet</servlet-class>
  <init-param>
   <param-name>application</param-name>
   <param-value>br.com.pc.ui.SistemaApplication</param-value>
  </init-param>
  <init-param>
   <param-name>widgetset</param-name>
   <param-value>br.com.pc.ui.ApplicationWidgetset</param-value>
  </init-param>
 </servlet>
 <servlet-mapping>
  <servlet-name>planoContas</servlet-name>
  <url-pattern>/*</url-pattern>
 </servlet-mapping>
 <session-config>
  <session-timeout>50</session-timeout>
 </session-config>
</web-app>
